<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BMICalculator"
             x:Class="BMICalculator.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Editor x:Name="Inp_weight" Placeholder="Please enter your weight in pounds" PlaceholderColor="Green" />
        <Editor x:Name="Inp_height" Placeholder="Please enter your height in inches" PlaceholderColor="Green" />
        <Label Text="Btn_BMI" x:Name="Lbl_BMI" />
        <Button Text="Click Me" x:Name="Btn_BMI" Clicked="Btn_Clicked" />
    </StackLayout>

</ContentPage>
